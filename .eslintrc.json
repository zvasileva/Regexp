{
  "extends": "airbnb-base",
  "env": {
     "es6": true,
     "browser": true,
     "jest": true
  },
  "rules": {
    "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ],	
	"no-underscore-dangle":  ["error", { "allow": ["_attack"] }],
	"no-useless-escape": 0,
	"class-methods-use-this": ["error", { "exceptMethods": ["validateUsernameAllChars","validateUsernameFirstLastChars","validateUsernameDigits"] }]
  }
}